<h1 class="text-center"> Disgusting Noises - Login </h1>
<%= render partial: 'messages' %>
<%= form_tag(action: 'login', controller: 'users', method: 'post') do %>
  <div class='form-group'>
    <%= label_tag User.human_attribute_name('username') %>
    <%= text_field_tag :username, '', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= label_tag User.human_attribute_name('password') %>
    <%= password_field_tag :password, '', class: 'form-control' %>
  </div>
  <%= submit_tag 'login', class: 'btn btn-success' %>
<% end %>
